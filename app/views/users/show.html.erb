<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="flex">
          <div class="avatar"><%= gravatar_for @user %></div>
          <div class="name"><%= @user.name %></div>
        </div>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.microposts.any? %>
      <section class="user_info">
        <h3 class="micropost-title"><%= t ".micropost" %> (<%= @user.microposts.size %>)</h3>
        <ul class="microposts">
          <%= render @microposts %>
        </ul>
        <%= paginate @microposts, theme: "twitter-bootstrap-3" %>
      </section>
    <% end %>
  </div>
</div>
