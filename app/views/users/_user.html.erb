<li class="list-group-item">
  <%= gravatar_for user, options: {size: Settings.helper.users.img_size_list} %>
  <%= link_to user.name, user %>
  <span class="user-action">
    <% if current_user.admin? && !current_user?(user) %>
      <%= link_to user, method: :delete, class: "btn btn-danger", data: {confirm: t(".confirm")} do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>
  </span>
</li>
