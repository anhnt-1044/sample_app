<% provide(:title, t(".title")) %>
<h1 class="title"><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label t(".form.name") %>
        <%= f.text_field :name, class: "form-control" %>
        <%= display_err @user.errors, :name %>
      </div>
      <div class="form-group">
        <%= f.label t(".form.email") %>
        <%= f.email_field :email, class: "form-control" %>
        <%= display_err @user.errors, :email %>
      </div>
      <div class="form-group">
        <%= f.label t(".form.password") %>
        <%= f.password_field :password, class: "form-control" %>
        <%= display_err @user.errors, :password %>
      </div>
      <div class="form-group">
        <%= f.label t(".form.password_confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <%= display_err @user.errors, :password_confirmation %>
      </div>
      <%= f.submit t(".create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
