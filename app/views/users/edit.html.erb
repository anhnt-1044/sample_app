<% provide :title, t(".title") %>
<% provide :button_text, t("users._form.save_changes") %>
<h1 class="title"><%= t ".sub_title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="thumbnail-img">
      <div class="gravatar_edit">
      <%= gravatar_for @user %>
        <%= link_to t(".change_email"), Settings.links.gravatar_email,
                  target: "_blank", rel: "noopener noreferrer" %>
      </div>
    </div>
  </div>
</div>
